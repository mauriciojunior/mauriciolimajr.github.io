.content
  +above(breakpoint)
    padding 0
    margin-left 21rem

  .container
    margin 0 20px
    padding-top 370px
    +above(breakpoint)
      margin-left auto
      margin-right auto
      max-width rem(920px)
      padding rem(60px) rem(80px)

    .post-item
      .post-title-item
        font-size rem(40px)
        font-weight 700
        padding 0
        margin 0
        margin-bottom 10px
        transition all .7s
        &:hover
          color #F7DF1E

      .description
        p
          font-size 20px
    a
      text-decoration none