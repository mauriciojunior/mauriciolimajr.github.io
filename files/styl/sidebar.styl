.sidebar
  z-index 99
  col(4/4)
  margin 0
  background #060606
  text-align center
  height 100%
  +above(breakpoint)
    width 21rem
    text-align center
    position fixed
    height 100%

  .profile
    padding-top rem(45px)

    img
      border-radius 50%
      max-width 115px

  .author-name
    center(rem(200px))
    font-size 24px
    font-weight 700
    color white
    letter-spacing .5px

  .profile-detail
    center(300px)

    p span
      font-size rem(15px)
      line-height 1.5
      color #FFFFFF
      letter-spacing 0.3px

  .nav
    margin-top rem(-10px)

    .social-media-list
      center(rem(100px))
      list-style none
      padding 0

      li
        col(1/3)

        a
          display inline-block

          .icon svg
            height 25px
            width 25px
            fill #FFFFFF
            &:hover
              opacity 0.6

    .nav-list
      col(4/4)
      padding 0
      margin 0
      list-style none

      li
        col(1/2)
        cursor pointer
        padding 17px 0px 17px 0
        margin 0
        transition all .7s
        +above(breakpoint)
          col(4/4)
        &:hover
          background rgb(0,0,0)
          color orange

        a
          text-decoration none
          color #fff
          display block
          width 100%
